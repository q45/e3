<% if current_user %>
	<%= render 'ribs/new' %>
<% end %>

<div class="panel left">
	<h1>Buddies</h1>
	<% @ribs.each do |ribbit| %>
		<div class="ribbitWrapper">
			<a href="<%= user_path ribbit.user %>">
			<img class="avatar" src="<%= ribbit.user.name %>" />
			<span class="name"><%= ribbit.user.name %></span>
			</a>
			@<%= ribbit.user.username %>
			<span class="time"><%= time_ago_in_words(ribbit.created_at) %></span>
			<p> <%= ribbit.content %></p>
		</div>	
	<% end %>
</div>

<%=  javascript_include_tag 'ribs' %>